<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${packageName}.${activityClass}" >

    <ImageView
        android:id="@+id/home_logo"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:src="@drawable/savant_home_icon"
        android:layout_marginTop="20dp"
        android:contentDescription="Home Logo" />
    
    <ImageView android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/divider"
        android:layout_marginTop="15dp" />
    
    <Button
        android:id="@+id/view_site_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:text="VIEW ALL SITES"
        android:textColor="#f0f0f0"
        android:textSize="25sp"
        android:typeface="sans" />
    
    <Button
        android:id="@+id/create_new_site_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#000000"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:text="CREATE A NEW SITE"
        android:textColor="#f0f0f0"
        android:textSize="25sp"
        android:typeface="sans" />

</LinearLayout>
